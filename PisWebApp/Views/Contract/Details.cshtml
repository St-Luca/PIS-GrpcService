@model PIS_GrpcService.PIS_GrpcService.GrpcContract

@{
    ViewData["Title"] = "Просмотр карточки контракта";
}

<div>
    <h4>Карточка контракта</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConclusionDate)
        </dt>
        <dd class="col-sm-10">
            @{
                DateTime date11 = Model.ConclusionDate.ToDateTime(); // Преобразование из формата gRPC в DateTime
                string date1 = date11.ToShortDateString();
            }
            @Html.DisplayFor(model => date1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EffectiveDate)
        </dt>
        <dd class="col-sm-10">
            @{
                DateTime date22 = Model.EffectiveDate.ToDateTime(); // Преобразование из формата gRPC в DateTime
                string date2 = date22.ToShortDateString();
            }
            @Html.DisplayFor(model => date2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Performer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Performer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocalityCosts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocalityCosts)
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Вернуться к реестру контрактов</a>
</div>
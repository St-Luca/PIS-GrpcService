@model PIS_GrpcService.PIS_GrpcService.GrpcApplication

@{
    ViewData["Title"] = "Просмотр карточки заявки";
}

<div>
    <h4>Карточка организации</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @{
                DateTime date11 = Model.Date.ToDateTime(); // Преобразование из формата gRPC в DateTime
                string date1 = date11.ToShortDateString();
            }
            @Html.DisplayFor(model => date1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicantCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicantCategory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnimalDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnimalDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Urgency)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Urgency)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Locality.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Locality.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organization.OrgName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organization.OrgName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Вернуться к реестру заявок</a>
</div>


